<%include partials/header%>
<title>Google Maps Plugin</title>
<link rel="stylesheet" type="text/css" href="/CSS/locationsInput.css">
<link rel="stylesheet" type="text/css" href="/CSS/map.css">
</head>
<body>
	<div class="container noSpace">
		<div class="row editorRow">
			<div class="col-lg-4 editor text-center probootstrap-animate fadeInLeft probootstrap-animated">
				<div class="choose row padding-top-20">
					<div class="col-lg-6">
						<p id="contentBtn" class="selected">Content</p>
					</div>
					<div class="col-lg-6 text-center">
						<p id="designBtn">Design</p>
					</div>
				</div>
				<!--location slide-->
				<div id="location" class="row text-left">
					<div class="col-lg-12 padding-left-50 padding-top-20">
						<p>Locations</p>
					</div>
					<div class="scrollDiv">

					</div>
					<div class="col-lg-12 padding-top-20 padding-left-50 padding-right-50 addLocation33">
						<a class="btn btn-primary  btn-block addLocationBtn" role="button"><i class="fas fa-plus padding-right-20"></i>Add Location</a>
					</div>
					<div class="col-lg-6 padding-top-20" style="padding-left: 33px;">
						<a href="/locationsInput" class="btn btn-primary  btn-block" role="button">Back</a>
					</div>
					<div class="col-lg-6 padding-top-20" style="padding-right: 33px;">
						<a href="/locationsInput" class="btn btn-primary  btn-block" role="button">Next</a>
					</div>
				</div>
				<!--end location slide-->

				<!--start editlocation slide-->
				<div id="editLocation" class="row text-left">
					<div class="col-lg-12 padding-left-50 padding-top-20">
						<p>Edit Location</p>
					</div>
					<div class="col-lg-12" style="height: 380px;">
						<form id="my_form">
						<div class="col-lg-12 padding-top-20">
							<div class="col-lg-4 padding-left-20">
								<p class="padding-top-10">Title:</p>
							</div>
							<div class="col-lg-8">
								<input class="grey" type="text" name="title" placeholder="Company's Name">
							</div>
						</div>
			
						<div class="col-lg-12 padding-top-20">
							<div class="col-lg-4 padding-left-20">
								<p class="padding-top-10">Address:</p>
							</div>
							<div class="col-lg-8">
								<input class="grey" type="text" name="address" placeholder="Street Address, City, State, Zip Code"  required>
							</div>
						</div>

						<div class="col-lg-12 padding-top-20">
							<div class="col-lg-4 padding-left-20">
								<p class="padding-top-10">Link:</p>
							</div>
							<div class="col-lg-8">
								<input class="grey" type="text" name="link" placeholder="Company's Link">
							</div>
						</div>

						<div class="col-lg-12 padding-top-20">
							<div class="col-lg-4 padding-left-20">
								<p class="padding-top-10">Phone Number:</p>
							</div>
							<div class="col-lg-8">
								<input class="grey" type="text" name="phoneNumber" placeholder="Company's Phone Number">
							</div>
						</div>

					</div>

					<div class="col-lg-12 padding-top-20 padding-left-50 padding-right-50 addLocation33">
						 <input class="btn btn-primary btn-block addLocationBtn" type="submit" value="Add Location">
					</div>
				</form>

					<div class="col-lg-6 padding-top-20" style="padding-left: 33px;">
						<a href="/locationsInput" class="btn btn-primary  btn-block" role="button">Back</a>
					</div>

				</div>
				<!--end editlocation slide-->

				<!--start design slide-->
				<div id="design" class="row text-left">
					<div class="col-lg-12 padding-left-30 padding-top-20">
						<p>Design</p>
					</div>
					<div class="col-lg-6 padding-top-20" style="padding-left: 33px;">
						<a href="/locationsInput" class="btn btn-primary  btn-block" role="button">Back</a>
					</div>
					<div class="col-lg-6 padding-top-20" style="padding-right: 33px;">
						<a href="/locationsInput" class="btn btn-primary  btn-block" role="button">Next</a>
					</div>
				</div>
				<!--end design slide-->
			</div>

			<!--start map slide-->
			<%include partials/basicMap%>
			<!--end map slide-->
		</div>
	</div>
</body>
<script type="text/javascript" src="/JS/locationsInput.js"></script>
<script type="text/javascript" src="/JS/basicMap.js"></script>
<script src=<%-JSON.stringify(gKey)%> async defer></script>
<%include partials/footer%>